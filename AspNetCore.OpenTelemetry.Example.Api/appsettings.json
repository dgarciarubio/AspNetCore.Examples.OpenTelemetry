{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AspNetCore.OpenTelemetry.Example.Api.Controllers.TelemetryController": "Trace"
    }
  },
  "AllowedHosts": "*",
  "OpenTelemetry": {
    "Resource": {
      "Service": {
        "Name": "AspNetCore.OpenTelemetry.Example.Api",
        "Namespace": null,
        "Version": null,
        "AutoGenerateInstanceId": true,
        "InstanceId": null
      }
    },
    "Tracing": {
      "Sources": [ "sample_source" ],
      "Instrumentation": {
        "AspNetCore": {
          "RecordException": false,
          "EnableGrpcAspNetCoreSupport": true
        }
      },
      "Exporters": {
        "Otlp": true
      }
    },
    "Metrics": {
      "Meters": [ "sample_meter" ],
      "Instrumentation": {
        "AspNetCore": {},
        "EventCounters": {
          "RefreshIntervalSecs": 1,
          "EventSources": [
            "Microsoft.AspNetCore.Hosting"
          ],
          "EventSourcesComment": "Check available event sources at at https://learn.microsoft.com/en-us/dotnet/core/diagnostics/available-counters"
        }
      },
      "Exporters": {
        "Otlp": true
      }
    },
    "Logging": {
      "IncludeFormattedMessage": false,
      "IncludeScopes": true,
      "ParseStateValues": false,
      "Exporters": {
        "Otlp": true
      }
    },
    "Exporters": {
      "Otlp": {
        "Endpoint": "http://your-otlp-service:4317"
      }
    }
  }
}
